{
  "name": "streamflix",
  "version": "0.1.0",
  "private": true,
  "description": "StreamFlix monorepo (React frontend + Express backend)",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:backend": "npm --prefix backend install",
    "install:frontend": "npm --prefix frontend install",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "lint": "npm-run-all lint:backend lint:frontend",
    "lint:backend": "npm --prefix backend run lint",
    "lint:frontend": "npm --prefix frontend run lint",
    "test": "npm-run-all test:backend test:frontend",
    "test:backend": "npm --prefix backend run test",
    "test:frontend": "npm --prefix frontend run test",
    "format": "npm-run-all format:backend format:frontend",
    "format:backend": "npm --prefix backend run format",
    "format:frontend": "npm --prefix frontend run format"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
